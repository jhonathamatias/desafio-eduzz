generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  created_at DateTime? @default(now())
  updated_at DateTime @updatedAt
  deposits   Deposit[] @relation("AccountDeposits")

  @@map("accounts")
}

model Deposit {
  id         String   @id @default(uuid())
  accountId  String
  amount     Float
  created_at DateTime? @default(now())
  account    Account  @relation("AccountDeposits", fields: [accountId], references: [id], onDelete: Cascade)

  @@map("deposits")
}